.chat-side
  .chat-side__side-header
    .chat-side__side-header__one
      .chat-side__side-header__one__user-name
        = current_user.name
      .chat-side__side-header__one__user-menu
        .chat-side__side-header__one__user-menu__new-group
          =link_to new_group_path do
            = icon('far', 'edit')
          
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
        .chat-side__side-header__one__user-menu__edit-user    
          
    
  .groups
    - current_user.groups.each do |group|
      .groups__groups-messages
        = link_to group_messages_path(group) do
          .groups__groups-messages__group-name
            = group.name
          .groups__groups-messages__latest-message
            = group.show_last_message
    
        

